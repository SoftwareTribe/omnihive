{
    "name": "root",
    "private": true,
    "version": "6.2.57",
    "workspaces": [
        "src/common/*",
        "src/custom/*",
        "src/desktop/*",
        "src/extras/*",
        "src/other/*",
        "src/server/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "scripts": {
        "build": "yarn node -r ts-node/register ./buildServer.ts",
        "build:custom": "yarn node -r ts-node/register ./buildServerManual.ts -w custom",
        "build:manual": "yarn node -r ts-node/register ./buildServerManual.ts",
        "build:debug": "yarn node --inspect=127.0.0.1:9228 --trace-warnings -r ts-node/register ./buildServer.ts -d",
        "clean:nodemodules": "npx npkill",
        "clean:packagelock": "find . -name \"package-lock.json\" -type f -delete",
        "commit": "cz",
        "desktop:debug": "cd src/desktop/omnihive-desktop && yarn run dev",
        "desktop:storybook": "cd src/desktop/omnihive-desktop-storybook && yarn run storybook",
        "docs:debug": "cd src/other/omnihive-docs && yarn start",
        "husky": "husky install",
        "release": "standard-version",
        "release:dry-run": "standard-version --dry-run",
        "server:debug": "cd src/server/omnihive && yarn run server:debug",
        "taskRunner:debug": "cd src/server/omnihive && yarn run taskRunner:debug",
        "test:debug": "docker-compose -f docker-compose.test.yml up -d --force-recreate && c8 mocha --inspect --exit;docker-compose -f docker-compose.test.yml down",
        "update:packages": "npx npm-check -u -E"
    },
    "dependencies": {
        "electron": "link:./src",
        "electron-builder": "link:./src",
        "electron-esbuild": "link:./src",
        "esbuild": "link:./src",
        "src": "link:./src"
    },
    "devDependencies": {
        "@commitlint/cli": "13.1.0",
        "@commitlint/config-conventional": "13.1.0",
        "@types/chai": "4.2.21",
        "@types/faker": "5.5.8",
        "@types/figlet": "1.5.4",
        "@types/fs-extra": "9.0.12",
        "@types/mocha": "9.0.0",
        "@types/node": "16.7.13",
        "@types/tar": "4.0.5",
        "@types/yargs": "17.0.2",
        "@typescript-eslint/eslint-plugin": "4.31.0",
        "@typescript-eslint/parser": "4.31.0",
        "axios": "0.21.4",
        "c8": "7.8.0",
        "chai": "4.3.4",
        "chalk": "4.1.2",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "dayjs": "1.10.6",
        "dotenv": "10.0.0",
        "enquirer": "2.3.6",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.24.2",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "execa": "5.1.1",
        "express": "4.17.1",
        "faker": "5.5.3",
        "figlet": "1.5.2",
        "fs-extra": "10.0.0",
        "husky": "7.0.2",
        "listr2": "3.11.1",
        "mocha": "9.1.1",
        "nodemon": "2.0.12",
        "prettier": "2.3.2",
        "read-pkg-up": "8.0.0",
        "replace-in-file": "6.2.0",
        "socket.io": "4.1.3",
        "source-map-support": "0.5.19",
        "standard-version": "9.3.1",
        "stylelint": "13.13.1",
        "stylelint-config-standard": "22.0.0",
        "tar": "6.1.11",
        "ts-node": "10.2.1",
        "typescript": "4.4.2",
        "webpack": "5.52.0",
        "write-pkg": "5.0.0",
        "yaml": "1.10.2",
        "yargs": "17.1.1"
    }
}
