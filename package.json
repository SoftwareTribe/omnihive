{
    "name": "omnihive-workspace",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "./src/common/*",
        "./src/desktop/*",
        "./src/extras/*",
        "./src/other/*",
        "./src/server/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/WithOneVisionTechnologies/omnihive.git"
    },
    "scripts": {
        "add:dev:deps": "pnpm add @types/chai @types/faker @types/mocha @types/node @typescript-eslint/eslint-plugin @typescript-eslint/parser chai eslint eslint-config-prettier eslint-plugin-prettier faker mocha prettier sinon stylelint stylelint-config-standard typescript -D -E -r",
        "build": "pnpm node -r ts-node/register ./buildServer.ts",
        "build:custom": "pnpm node -r ts-node/register ./buildServerManual.ts -w custom",
        "build:manual": "pnpm node -r ts-node/register ./buildServerManual.ts",
        "build:debug": "pnpm node --inspect=127.0.0.1:9228 --trace-warnings -r ts-node/register ./buildServer.ts -d",
        "clean:dev:build": "ts-node ./cleanupDevBuild.ts",
        "desktop:debug": "cd src/desktop/omnihive-desktop && pnpm run dev",
        "desktop:storybook": "cd src/desktop/omnihive-desktop-storybook && pnpm run storybook",
        "docs:debug": "cd src/other/omnihive-docs && pnpm start",
        "server:debug": "cd src/server/omnihive && pnpm run server:debug",
        "taskRunner:debug": "cd src/server/omnihive && pnpm run taskRunner:debug",
        "test:debug": "docker-compose -f docker-compose.test.yml up -d --force-recreate && nyc mocha --inspect --exit;docker-compose -f docker-compose.test.yml down"
    },
    "devDependencies": {
        "@commitlint/cli": "13.1.0",
        "@commitlint/config-conventional": "13.1.0",
        "@istanbuljs/esm-loader-hook": "0.1.2",
        "@istanbuljs/nyc-config-typescript": "1.0.1",
        "@types/chai": "4.2.21",
        "@types/faker": "5.5.8",
        "@types/figlet": "1.5.4",
        "@types/fs-extra": "9.0.12",
        "@types/mocha": "9.0.0",
        "@types/node": "16.9.1",
        "@types/rimraf": "3.0.2",
        "@types/tar": "4.0.5",
        "@types/yargs": "17.0.2",
        "@typescript-eslint/eslint-plugin": "4.31.0",
        "@typescript-eslint/parser": "4.31.0",
        "axios": "0.21.4",
        "c8": "7.9.0",
        "chai": "4.3.4",
        "chalk": "4.1.2",
        "commitizen": "4.2.4",
        "cross-env": "7.0.3",
        "cz-conventional-changelog": "3.3.0",
        "enquirer": "2.3.6",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "execa": "5.1.1",
        "faker": "5.5.3",
        "figlet": "1.5.2",
        "fs-extra": "10.0.0",
        "listr2": "3.11.1",
        "mocha": "9.1.1",
        "nodemon": "2.0.12",
        "nyc": "15.1.0",
        "prettier": "2.4.0",
        "read-pkg-up": "8.0.0",
        "replace-in-file": "6.2.0",
        "rimraf": "3.0.2",
        "sinon": "11.1.2",
        "source-map-support": "0.5.20",
        "standard-version": "9.3.1",
        "stylelint": "13.13.1",
        "stylelint-config-standard": "22.0.0",
        "tar": "6.1.11",
        "ts-node": "10.2.1",
        "typescript": "4.4.3",
        "write-pkg": "5.0.0",
        "yargs": "17.1.1"
    }
}
