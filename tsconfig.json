{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "types": ["mocha", "node"]
    },
    "references": [],
    "paths": {
        "@withonevision/*": ["./src/common/*", "./src/desktop/*", "./src/extras/*", "./src/other/*", "./src/server/*"]
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/package.json"],
    "exclude": [".yarn/**/*", "node_modules/**/*", "**/node_modules/**/*", "./dist/**/*", "src/**/*.spec.ts" ]
}
