// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch VS Code Extension",
            "path": "${workspaceFolder}/src/other/omnihive-vscode-manager",
            "options": {
                "cwd": "${workspaceFolder}/src/other/omnihive-vscode-manager"
            },
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
