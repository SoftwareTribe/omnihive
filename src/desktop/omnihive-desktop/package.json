{
    "name": "omnihive-desktop",
    "version": "0.0.0",
    "scripts": {
        "dev": "electron-esbuild dev",
        "build": "electron-esbuild build",
        "package": "electron-builder"
    },
    "dependencies": {
        "@withonevision/omnihive-core": "workspace:*",
        "@withonevision/omnihive-desktop-core": "workspace:*",
        "electron-better-ipc": "2.0.1",
        "electron-store": "8.0.0",
        "lodash": "4.17.21",
        "react-tooltip": "4.2.21"
    },
    "devDependencies": {
        "@types/lodash": "4.14.172",
        "@types/node": "14.17.14",
        "@types/react": "17.0.19",
        "@types/react-dom": "17.0.9",
        "@vitejs/plugin-react-refresh": "1.3.6",
        "autoprefixer": "10.3.4",
        "electron": "13.1.6",
        "electron-builder": "22.11.7",
        "electron-esbuild": "2.0.0",
        "electron-util": "0.17.2",
        "esbuild": "0.12.25",
        "postcss": "8.3.6",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "tailwindcss": "2.2.9",
        "typescript": "4.4.2",
        "vite": "2.5.3",
        "vitejs-plugin-electron": "0.1.5"
    },
    "build": {
        "appId": "io.comp.myapp",
        "productName": "electron-vite",
        "extraMetadata": {
            "name": "electron-vite",
            "main": "main.js"
        },
        "files": [
            {
                "from": ".",
                "filter": [
                    "package.json"
                ]
            },
            {
                "from": "dist/main"
            },
            {
                "from": "dist/renderer"
            }
        ],
        "win": {
            "target": [
                "zip"
            ]
        },
        "mac": {
            "target": [
                "zip"
            ]
        },
        "linux": {
            "target": [
                "zip"
            ]
        },
        "directories": {
            "buildResources": "resources"
        },
        "publish": null
    }
}
