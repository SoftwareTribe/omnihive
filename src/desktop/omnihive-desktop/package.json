    "build": {
        "appId": "vision.withone.omnihiveDesktop",
        "productName": "OmniHive Desktop",
        "extraMetadata": {
            "name": "omnihive-desktop",
            "main": "main.js"
        },
        "files": [
            {
                "from": ".",
                "filter": [
                    "package.json"
                ]
            },
            {
                "from": "dist/main"
            },
            {
                "from": "dist/renderer"
            }
        ],
        "win": {
            "target": [
                "zip"
            ]
        },
        "mac": {
            "target": [
                "zip"
            ]
        },
        "linux": {
            "target": [
                "zip"
            ]
        },
        "directories": {
            "buildResources": "resources"
        },
        "publish": null
    }
