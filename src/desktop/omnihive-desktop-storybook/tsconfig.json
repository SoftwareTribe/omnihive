{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "react",
        "lib": ["DOM", "DOM.Iterable", "ES2021"],
        "module": "CommonJS",
        "outDir": ".",
        "paths": {
            "@withonevision/*": [
                "../../common/*",
                "../../desktop/*",
                "../../extras/*",
                "../../other/*",
                "../../server/*"
            ]
        },
        "rootDir": ".",
        "target": "ES2021"
    },
    "references": [
        { "path": "../../common/omnihive-core/tsconfig.esm.dev.json" },
        { "path": "../../common/omnihive-desktop-core/tsconfig.esm.dev.json" },
        { "path": "../omnihive-desktop-server-manager/tsconfig.dev.json" }
    ],
    "include": ["./**/*.ts", "./**/*.tsx", "./package.json"],
    "exclude": ["node_modules/**/*", "**/node_modules/**/*"]
}
