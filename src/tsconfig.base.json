{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["ES2021"],
        "module": "ES2020",
        "moduleResolution": "Node",
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2021",
        "types": ["node"]
    },
    "paths": {
        "@withonevision/*": ["./common/*", "./custom/*", "./desktop/*", "./extras/*", "./server/*"]
    }
}
