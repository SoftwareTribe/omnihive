include mixins.pug
doctype html
html
    head
        +head(rootUrl)
        script.
            var status = "#{status}";
            var error = !{JSON.stringify(error)};
            var registeredUrls = !{JSON.stringify(registeredUrls)};

            console.log(`OH STATUS: ${status}`);

            if (!error || error === "" || error === "{}") {
                console.log(`OH ERROR: NONE`);
            } else {
                console.log(`OH ERROR:`);
                console.log(error);
            }

            console.log(`OH REGISTERED URLS:`);
            console.log(registeredUrls);
    body
        div(class="w-full h-full mt-28")
            div(class="m-auto")
                img(
                    alt="OmniHive Logo"
                    class="m-auto"
                    src="https://res.cloudinary.com/drmwm8u2c/image/upload/c_scale,w_150/v1557346251/branding/logos/omnihive-bee-white.png"
                )
            div(class="m-auto text-center mt-9")
                span(class="text-white text-2xl") OMNIHIVE SERVER
                br
                span(class="text-yellow-500 text-xl") STATUS: #{status.toUpperCase()}
                br
                br
                span(class="text-white text-md") See console log for further information