{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", ".vscode-test", "**/app/**"],
    "paths": {
        "@withonevision/*": ["../*", "../../server/*", "../../extras/*", "../../other/*"]
    }
}
