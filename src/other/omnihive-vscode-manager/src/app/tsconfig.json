{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES6",
        "outDir": "../out",
        "lib": ["ES6", "DOM", "DOM.Iterable"],
        "jsx": "react",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"],
    "paths": {
        "@withonevision/*": ["../../*", "../../../server/*", "../../../extras/*", "../../../other/*"]
    }
}
